{
  "expo": {
    "name": "IAnswer",
    "slug": "IAnswer",
    "version": "1.0.20",
    "ios": {
      "buildNumber": "20",
      "supportsTablet": true,
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-2103807205659646~3048157861"
      },
      "bundleIdentifier": "com.kuwahara.IAnswer",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "他社のデータを活用して広告を表示するために、トラッキングの許可をお願いします。",
        "NSMicrophoneUsageDescription": "This app uses the microphone to allow users to send orders via voice message."
      }
    },
    "plugins": [
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "他社のデータを活用して広告を表示するために、トラッキングの許可をお願いします。"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "撮影写真を解析するために、カメラへのアクセスが必要です。",
          "microphonePermission": "このアプリは、音声メッセージで注文を送信するためにマイクを使用します。"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "保存済みの写真を解析するために写真ライブラリへのアクセスが必要です。"
        }
      ],
      "expo-secure-store"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "3845abf4-c362-4dbd-9e69-9816fc62c837",
        "awsAccessKeyId": "${ACCESS_KEY}",
        "awsSecretAccessKey": "${SECRET_ACCESS_KEY}"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/3845abf4-c362-4dbd-9e69-9816fc62c837"
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-xxxxxxxx~xxxxxxxx",
    "ios_app_id": "ca-app-pub-2103807205659646~3048157861",
    "delay_app_measurement_init": true,
    "user_tracking_usage_description": "「許可」を押すと、他社のデータも活用し、よりお客様に適した広告が表示されます。"
  }
}
